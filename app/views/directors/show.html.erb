<nav>
  <%= link_to 'Home', root_path %>
</nav>

<h1>Director #<%= @director.id %> details</h1>

<%= link_to 'Go back', directors_path %>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @director.name %></dd>
  
  <dt>Dob</dt>
  <dd><%= @director.dob %></dd>
  
  <dt>Bio</dt>
  <dd><%= @director.bio %></dd>

  <dt>Image</dt>
  <dd><%= image_tag(@director.image, style: "width:250px;") if @director.image.present? %></dd>

  <dt>Created at</dt>
  <dd><%= @director.created_at %></dd>

  <dt>Updated at</dt>
  <dd><%= @director.updated_at %></dd>
</dl>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th> <!-- This is for the 'Show details' link -->
  </tr>
  <% @director.movies.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><%= image_tag(movie.image, style: "width:250px;") if movie.image.present? %></td>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%= @director.name %></td>
      <td><%= link_to 'Show details', movie_path(movie) %></td>
    </tr>
  <% end %>
</table>

<hr>
